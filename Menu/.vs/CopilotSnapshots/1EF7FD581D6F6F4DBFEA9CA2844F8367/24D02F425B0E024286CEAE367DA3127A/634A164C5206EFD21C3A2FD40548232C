// Implement MenuItem as a leaf in the composite pattern
using System;
using NavigationSystem.Menu;

namespace NavigationSystem.Menu
{
    public class MenuItem : MenuComponent
    {
        private readonly Action _action;

        public MenuItem(string title, Action action = null) : base(title)
        {
            _action = action;
        }

        public override void Display(int indent)
        {
            Console.WriteLine(new string(' ', indent * 2) + "- " + Title);
        }

        public override void Execute()
        {
            _action?.Invoke();
        }
    }
}
